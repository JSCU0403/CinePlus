<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Store.model.Product">
	<!-- 전체상품목록 불러오기 -->
	<select id="GetProductList" resultType="Store">
		select * from Product 
	</select>
	
	<!-- 상품 상세정보 불러오기 -->
  	<select id="GetProducDetailByNum" resultType="Store">
		select * from Product where product_code = #{p_code}
	</select>
</mapper>

<!-- product.xml -->
